@model TechnologySystem.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create a new Course Category</h2>

@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    if (ViewBag.Error == "Name is already exist")
    {
        <h1 class="text-danger">@ViewBag.Error<br></h1>
    }

    <div class="form-group">
        @Html.LabelFor(c => c.CategoryName)
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control", @placeholder = "Enter category name" })
        @Html.ValidationMessageFor(c => c.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Description)
        @Html.TextBoxFor(c => c.Description, new { @class = "form-control", @placeholder = "Enter category description" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create a new Course Category</button>
    </div>
}
