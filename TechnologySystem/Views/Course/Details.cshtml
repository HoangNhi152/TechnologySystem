@model TechnologySystem.Models.Course
@using TechnologySystem.Utils

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>


@if (User.IsInRole(Role.Staff))
{
    <div class="form-group">
        @Html.ActionLink("See Trainer in Course", "ShowTrainers", "Course", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>
}
    <div class="form-group">
        @Html.ActionLink("See Trainee in Course", "ShowTrainees", "Course", new { id = Model.Id }, new { @class = "btn btn-success" })
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">Name: @Model.CourseName </div>
        <div class="panel-body">
            <p>Category: @Model.Category.CategoryName</p>
            <p>Description: @Model.Description</p>

        </div>
    </div>
    <div class="form-group">
        @Html.ActionLink("Back to Index page", "Index", "Course", new { @class = "btn btn-primary" })
    </div>