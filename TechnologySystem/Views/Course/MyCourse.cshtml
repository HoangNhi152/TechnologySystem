@model IEnumerable<TechnologySystem.Models.Course>
@using TechnologySystem.Utils
@{
    ViewBag.Title = "MyCourse";
}

<h2>My Courses</h2>


<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item list-group-item-info">My Courses</li>
            @foreach (var course in Model)
            {
        <li class="list-group-item">
            @course.CourseName
            @if (User.IsInRole(Role.Staff))
            {
                <div class="form-group">
                    @Html.ActionLink("See Trainer in Course", "ShowTrainers", "Course", new { id = course.Id }, new { @class = "btn btn-success" })
                </div>
            }
                <div class="form-group">
                    @Html.ActionLink("See Trainee in Course", "ShowTrainees", "Course", new { id = course.Id }, new { @class = "btn btn-success" })
                </div>
            </li>

            }
        </ul>
    </div>
</div>