@model TechnologySystem.ViewModels.AssignCoursesViewModel
@{
    ViewBag.Title = "AddTrainers";
}

<h2>Add a new Trainers</h2>


@using (Html.BeginForm("AddTrainers", "Course", FormMethod.Post))
{
    <div class="form-group">
        Username:
        @Html.HiddenFor(m => m.CourseId)
        @Html.DropDownListFor(m => m.UserId,
            new SelectList(Model.Users, "Id", "Username"),
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
}