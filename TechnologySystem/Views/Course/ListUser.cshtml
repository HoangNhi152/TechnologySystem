@model List<TechnologySystem.Models.AssignCourse>
@using TechnologySystem.ViewModels
@{
    ViewBag.Title = "ListUser";
}
<h2>ListUser</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Course name</th>
            <th scope="col">Full name</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@{i++;}@i</th>
                <td>@user.Course.CourseName</td>
                <td>@user.User.FullName</td>
                <td>@user.User.Email</td>
            </tr>
        }
    </tbody>
</table>
